<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_message_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="5dp"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_message_body"
            android:background="@drawable/ic_text_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="4dp"
            android:textColor="#000000"
            android:textSize="11sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_message_who"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_message_who"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_message_body"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/text_message_body"
            android:text="11:40"
            android:textSize="10sp"
            app:layout_constraintRight_toLeftOf="@+id/text_message_body"
            app:layout_constraintTop_toBottomOf="@id/text_message_who"
            tools:ignore="SmallSp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
